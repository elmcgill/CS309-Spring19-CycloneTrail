<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/btnToChat"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/circle_accent"
        android:drawableTop="@drawable/ic_baseline_chat_24px"
        android:paddingTop="11dp"
        android:paddingLeft="2dp"/>

    <Button
        android:id="@+id/btnViewPack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_accent"
        android:drawableTop="@drawable/ic_backpack_icon"
        android:paddingTop="6dp"
        android:paddingLeft="1dp"/>

    <Button
        android:id="@+id/choice_4"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/choice_3"
        android:layout_marginBottom="105dp"
        android:text="Choice 4"
        android:textSize="20sp"
        android:background="@drawable/event_choice"/>

    <Button
        android:id="@+id/choice_3"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/choice_2"
        android:layout_marginBottom="105dp"
        android:text="Choice 3"
        android:textSize="20sp"
        android:background="@drawable/event_choice"/>

    <Button
        android:id="@+id/choice_2"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/choice_1"
        android:layout_marginBottom="105dp"
        android:text="Choice 2"
        android:textSize="20sp"
        android:background="@drawable/event_choice"/>

    <Button
        android:id="@+id/choice_1"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:text="Choice 1"
        android:textSize="20sp"
        android:background="@drawable/event_choice"/>

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_above="@+id/choice_4"
        android:layout_marginBottom="5dp"
        android:text="Choice 1"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"/>

</RelativeLayout>